<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.kakaocorp.iamguide.dao.GuideDirMapper">
    <insert id="createGuideDir">
        insert into GUIDE_DIR(DIR_NAME,DIR_PARENT_KEY,DIR_STATE)
        values(#{text},#{parent},#{state})
    </insert>

    <insert id="createGuideRootDir">
        <selectKey keyProperty="DIR_KEY" resultType="int" order="BEFORE">
            SELECT IFNULL(MAX(DIR_KEY+1),1) FROM GUIDE_DIR
        </selectKey>
        insert into GUIDE_DIR(DIR_KEY,DIR_NAME,DIR_PARENT_KEY,DIR_STATE)
        values(#{DIR_KEY},#{text},#{DIR_KEY},#{state})
    </insert>

    <update id="updateGuideDir">
        update GUIDE_DIR SET DIR_NAME=#{text}, DIR_PARENT_KEY=#{parent}, DIR_STATE=#{state}
        where DIR_KEY=#{key}
    </update>

    <delete id="deleteGuideDir">
        delete from GUIDE_DIR where DIR_KEY=#{key}
    </delete>

</mapper>